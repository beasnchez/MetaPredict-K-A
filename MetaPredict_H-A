    <div class="navigation">
        <button onclick="prevSlide()">Anterior</button>
        <button onclick="nextSlide()">Siguiente</button>
        <button onclick="toggleTimer()">Iniciar/Pausar</button>
        <button onclick="resetTimer()">Reiniciar</button>
